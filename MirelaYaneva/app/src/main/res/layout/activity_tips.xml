<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tips">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:background="#7c569e"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtToDoList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center|center_horizontal"
            android:text="Вашият списък със съвети:"
            android:textColor="#d3c7dd "
            android:textSize="28sp"
            android:textStyle="bold"
            app:fontFamily="serif" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:background="@color/textColor" />

            <CheckBox
                android:id="@+id/chkBoxDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:button="@android:drawable/presence_invisible"
                android:text=" Избор на няколко дати (ако  някоя от датите е заета)"
                android:textColor="#d3c7dd "
                android:textSize="15sp" />

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:background="@color/textColor" />

            <CheckBox
                android:id="@+id/chkBoxMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:button="@android:drawable/presence_invisible"
                android:text=" Избор на бюджет (изберете сумата, в която трябва да влезе сватбата"
                android:textColor="#d3c7dd "
                android:textSize="15sp" />

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:background="@color/textColor" />

            <CheckBox
                android:id="@+id/chkBoxWriteMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:button="@android:drawable/presence_invisible"
                android:text=' Водене на бюджета ( записвайте си всеки разход в секция "Бюджет", за да следите как сте с разходите)'
                android:textColor="#d3c7dd "
                android:textSize="15sp" />

            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:background="@color/textColor" />

            <CheckBox
                android:id="@+id/chkBoxColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:button="@android:drawable/presence_invisible"
                android:text=" Избор на цвят и тема на сватбата"
                android:textColor="#d3c7dd "
                android:textSize="15sp" />

            <View
                android:id="@+id/divider7"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:background="@color/textColor" />

            <CheckBox
                android:id="@+id/chkBoxFamilyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:button="@android:drawable/presence_invisible"
                android:text=" Решаване дали  булката ще си смени фамилията"
                android:textColor="#d3c7dd "
                android:textSize="15sp" />

            <View
                android:id="@+id/divider8"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:background="@color/textColor" />

            <CheckBox
                android:id="@+id/chkBoxContract"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:button="@android:drawable/presence_invisible"
                android:text=" Решаване дали ще се прави предбрачен договор"
                android:textColor="#d3c7dd "
                android:textSize="15sp" />

            <View
                android:id="@+id/divider9"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:background="@color/textColor" />

            <CheckBox
                android:id="@+id/chkBoxTradition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:button="@android:drawable/presence_invisible"
                android:text=" Решане кои традиции ще се спазват"
                android:textColor="@color/textColor"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>